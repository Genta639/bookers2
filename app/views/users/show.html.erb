<div class="profile-container">
  <% if flash[:notice] %>
    <div class="flash">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <div class="container">
    <div class="row">
      <div class="col-xs-3">

        <%= render 'users/user_info', user: @user %>
        <%= render 'books/new_book', book: @book %>

      </div>

      <div class="col-xs-9">
        <h2>Books</h2>

        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <% @books.each do |book| %>
          <tbody>
            <tr>
              <th>
                <%= link_to user_path(@user.id) do %>
                  <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %>
                <% end %>
              </th>
              <th>
                <%= link_to book_path(book.id) do %>
                  <p><%= book.title %></p>
                <% end %>
              </th>
              <th><%= book.body %></th>
            </tr>
          </tbody>
          <% end %>
        </table>

      </div>
    </div>
  </div>
</div>