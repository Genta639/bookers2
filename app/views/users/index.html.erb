<div class="profile-container">
  <% if flash[:notice] %>
    <div class="flash">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <% if @book.errors.any? %>
    <p>error</p>
    <% @book.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>

  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <%= render 'users/user_info', user: @user %>
        <%= render 'books/new_book', book: @book %>
      </div>
      <div class="col-md-8 offset-md-1">
         <table class="table">
          <thead>
            <tr>
              <th scope="col">Image</th>
              <th scope="col">Name</th>
              <th scope="col"></th>
            </tr>
          </thead>
          <% @users.each do |user| %>
          <tbody>
            <div>
              <td>
                <%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %>
              </td>
              <td>
                <p><%= user.name %></p>
              </td>
              <td>
                <%= link_to 'Show', user_path(user.id) %>
              </td>
            </div>
            <% end %>
          </tbody>
        </table>
      </div>
</div>