<div class="profile-container">
  <% if flash[:notice] %>
    <div class="flash">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <% if @book.errors.any? %>
    <p>error</p>
    <% @book.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>

  <div class="container">
    <div class="row">
      <div class="col-md-3">

        <%= render 'users/user_info', user: @book.user %>
        <%= render 'books/new_book', book: @new_book %>

      </div>
      <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>

      <% if @book.user == current_user %>
        <table class="table">
        <tbody>
          <td>
            <%= link_to user_path(@book.user.id) do %>
              <div class="row">
                <%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %>
              </div>
              <div class="row">
                <%= @book.user.name %>
              </div>
            <% end %>
          </td>
          <td>
            <%= link_to book_path(@book.id) do %>
              <p><%= @book.title %></p>
            <% end %>
          </td>
          <td>
            <%= @book.body %>
          </td>
          <td>
            <% if @book.user == current_user %>
              <%= link_to "Edit", edit_book_path(@book.id), class: 'btn btn-sm btn-success edit_book_14535' %>
            <% end %>
          </td>
          <td>
            <% if @book.user == current_user %>
              <%= link_to "Destroy", book_path, class: 'btn btn-sm btn-danger destroy_book_14535', method: :delete %>
            <% end %>
          </td>
        </tbody>
        </table>

      <% else %>
        <table class="table">
        <tbody>
          <td>
          <%= link_to user_path(@book.user.id) do %>
              <div class="row">
                <%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %>
              </div>
              <div class="row">
                <%= @book.user.name %>
              </div>
            <% end %>
          </td>
          <td>
            <%= link_to book_path(@book.id) do %>
              <p><%= @book.title %></p>
            <% end %>
          </td>
          <td>
            <p><%= @book.body %> </p>
          </td>
        </tbody>
        </table>
      <% end %>


    </div>
  </div>
</div>